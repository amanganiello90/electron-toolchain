{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "each",
          "extend",
          "for",
          "include",
          "mixin",
          "function",
          "return"
        ]
      }
    ],
    "max-empty-lines": 2,
    "selector-type-no-unknown": [
      true,
      {
        "ignoreTypes": [
          "/^md-/",
          "/^rx-/",
          "/^sd-/",
          "/^mat-/"
        ]
      }
    ]
  }
}
